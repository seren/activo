<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fourhcistudents.activo.SituationChooserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Situation Chooser"
            android:id="@+id/textViewTitle"
            android:layout_span="15"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose situations manually"
            android:id="@+id/manual_situations_enabled"
            android:layout_gravity="left|end"
            android:layout_column="14"
            android:onClick="setManualSituationsEnabled"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewSpacer" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Pocket"
            android:id="@+id/situation_switch_phone_location"
            android:layout_gravity="end"
            android:layout_column="14"
            android:onClick="setInPocket"
            android:paddingBottom="10dp" />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Silent Mode"
            android:id="@+id/situation_switch_phone_mode"
            android:layout_gravity="end"
            android:layout_column="14"
            android:onClick="setSilentMode"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Activity"
            android:id="@+id/textView2"
            android:paddingBottom="10dp" />


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/situation_radioGroup_user_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Meeting"
                android:id="@+id/situation_radioButton_in_meeting"
                android:layout_gravity="right"
                android:onClick="onRadioButtonClicked"
                android:paddingBottom="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Call"
                android:id="@+id/situation_radioButton_on_call"
                android:layout_gravity="right"
                android:onClick="onRadioButtonClicked"
                android:paddingBottom="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:id="@+id/situation_radioButton_normal"
                android:layout_gravity="right"
                android:onClick="onRadioButtonClicked"
                android:paddingBottom="10dp" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
