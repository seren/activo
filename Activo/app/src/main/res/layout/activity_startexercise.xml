<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startexercise_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/sound"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:background="@null"
        android:src="@drawable/sound_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/exercise"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/exercise1"
        android:layout_above="@+id/instructions"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/time_left_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#345803"
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:textColor="#ffb5bac4"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/playbutton"
        android:layout_alignTop="@+id/pause_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/pause_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pausebutton"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/instructions"
        android:layout_alignLeft="@+id/play_btn" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/nextbutton"
        android:layout_alignTop="@+id/pause_btn"
        android:layout_alignRight="@+id/exercise" />

    <Button
        android:id="@+id/previous_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/previousbutton"
        android:layout_alignTop="@+id/play_btn"
        android:layout_alignLeft="@+id/exercise" />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/micicon"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/play_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <!--<TextView-->
        <!--android:id="@+id/txtSpeechInput"-->
        <!--android:layout_width="wrap_content"-->
